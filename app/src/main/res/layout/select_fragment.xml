<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.select.SelectFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/flag1"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            android:src="@drawable/flag_checa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/flag2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            android:src="@drawable/flag_mozambique"
            app:layout_constraintTop_toBottomOf="@id/flag1"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/flag3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            android:src="@drawable/flag_new_zeland"
            app:layout_constraintTop_toBottomOf="@id/flag2"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/flag4"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            android:src="@drawable/flag_oman"
            app:layout_constraintTop_toBottomOf="@id/flag3"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/flag5"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitEnd"
            android:src="@drawable/flag_peru"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/flag6"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitEnd"
            android:src="@drawable/flag_star"
            app:layout_constraintTop_toBottomOf="@id/flag5"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/flag7"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitEnd"
            android:src="@drawable/flag_suiza"
            app:layout_constraintTop_toBottomOf="@id/flag6"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/flag8"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitEnd"
            android:src="@drawable/flag_spain"
            app:layout_constraintTop_toBottomOf="@id/flag7"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageManuscript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/game_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnStart"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/button"
            android:textAppearance="@style/Bold.TextColorLight.VeryVeryLarge"
            android:text="@string/play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnLearn"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/button"
            android:textAppearance="@style/Bold.TextColorLight.VeryVeryLarge"
            android:text="@string/learn"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/button"
            android:textAppearance="@style/Bold.TextColorLight.VeryVeryLarge"
            android:text="@string/settings"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLearn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>